@model List<Motel.Web.Models.Servicios>

@{
    ViewData["Title"] = "Servicios disponibles";
}

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
else if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center">No hay servicios registrados actualmente.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var s in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@s.NombreServicio</h5>
                        <p class="card-text">@s.DescripcionServicio</p>
                        <p class="fw-bold">@s.PrecioServicio.ToString("C")</p>
                    </div>
                </div>
            </div>
        }
    </div>
}