@model List<Motel.Web.Models.Servicio>

@{
    ViewData["Title"] = "Servicios";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
        <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model == null || !Model.Any())
{
        <div class="alert alert-warning">No hay servicios para mostrar.</div>
}
else
{
        <div class="row g-3">
        @foreach (var s in Model)
        {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@s.NombreServicio</h5>
                                <p class="card-text flex-grow-1">@s.DescripcionServicio</p>
                                <p class="fw-bold mb-0">@s.PrecioServicio.ToString("C")</p>
                            </div>
                        </div>
                    </div>
        }
        </div>
}